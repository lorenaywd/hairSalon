{% extends 'base.html.twig' %}

{% block title %}Bienvenue au Salon de Coiffure{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/home.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/service.css') }}">
{% endblock %}

{% block body %}
    <div class="home-page">
     <img src="{{ asset('images/bannièreCheveuxTextures.webp') }}" alt="Nettoyage appartement" class="cleaning-image">
        <div class="content">
            <h1>Bienvenue à HairSalon</h1>
            <p>Découvrez nos services pour sublimer vos cheveux !</p>
            <a href="{{ path('app_services') }}" class="btn btn-primary">Consultez nos services</a>
        </div>
    </div>

     <div class="services-page">
        {% for service in services %}
            <div class="service-card">
                <div class="service-details">
                    <h3>{{ service.name }}</h3>
                    <p>{{ service.description }}</p>
                    <p class="price">{{ service.price }} €</p>
                    <a href="{{ path('app_booking', { 'serviceId': service.id }) }}" class="btn btn-primary">Réserver</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
